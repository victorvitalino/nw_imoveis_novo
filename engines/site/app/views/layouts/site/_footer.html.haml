        .col-xs-12.col-sm-6.col-md-3.footer-nav-col
          .ft-featured-properties
            %h4.ft-col-title Imóveis Destaques
            .featured-property
              %ul
                - @properties = Property.where(featured: true).limit(3).order(:created_at)
                - @properties.each do |featured|
                  %li
                    .featured-image
                      %a{:href => "#{property_path(featured)}"}
                        %img{:alt => "",:class => "thumb-featured", :src => "#{featured.thumb? ? featured.thumb : '/images/property/property1.jpg'}"}/
                    .featured-decs
                      %span.featured-status
                        %a{:href => "#{property_path(featured)}"}
                      %h4.featured-title
                        %a{:href => "#{property_path(featured)}", :title => "#{featured.name}"}
                          = featured.name
        .col-xs-12.col-sm-6.col-md-3.footer-nav-col
          .ft-useful-links
            %h4.ft-col-title Links Úteis
            %nav.useful-links-menu{:role => "navigation"}
              %ul
                %li.menu-item
                  %a{:href => "#"} Termos de Uso
                %li.menu-item
                  %a{:href => "#"} Política de Uso
                %li.menu-item
                  %a{:href => "#"} Contato
