                  %a{:href => "#"} Trabalhe Conosco
                %li.menu-item
                  %a{:href => "#"} Quem Somos
                %li.menu-item
                  %a{:href => "#"} FAQs
        .col-xs-12.col-sm-6.col-md-3.footer-nav-col
          .ft-contact-info
            %h4.ft-col-title Contato
            %ul.detail-contact-info
              %li
                %i.fa.fa-map-marker>
                 Brasília
              %li
                %i.fa.fa-phone>
                 (61)-3046-6088
              %li
                %i.fa.fa-envelope-o>
                %a{:href => "mailto:contato@ammax.com.br"} contato@ammax.com.br
